<!DOCTYPE html>
<html lang="en" ng-app="BlurAdmin">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blur Admin</title>

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900italic,900&subset=latin,greek,greek-ext,vietnamese,cyrillic-ext,latin-ext,cyrillic' rel='stylesheet' type='text/css'>

    <link rel="icon" type="image/png" sizes="16x16" href="assets/img/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="assets/img/favicon-96x96.png">


    <link rel="stylesheet" href="{{ asset('bundles/wbiapiuser/css/angular-toastr.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/wbiapiuser/css/animate.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/wbiapiuser/css/bootstrap.css') }}" />
    <link rel="stylesheet" href="/wbiapiuser/css/bootstrap-select.css" />
    <link rel="stylesheet" href="/wbiapiuser/css/bootstrap-switch.css" />
    <link rel="stylesheet" href="/wbiapiuser/css/bootstrap-tagsinput.css" />

    <link rel="stylesheet" href="{{ asset('bundles/wbiapiuser/css/auth.css') }}" />

    <style type="text/css">
        body::before {
            content: '';
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background: url({{ asset('bundles/wbiapiuser/images/blur-bg.jpg') }}) no-repeat center center;
            background-size: cover;
            will-change: transform;
            z-index: -1;
        }
    </style>
</head>
    <body>
    <main class="auth-main">
        <div class="auth-block">
            <div>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
            </div>

            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div>
                {% block fos_user_content %}
                {% endblock fos_user_content %}
            </div>
        </div>
    </main>
    </body>
</html>
